# BASIC SETTINGS (objects, flags, etc.)
######################################################################################################################################

BINARY_NAME = bnb-fs
OBJS = main.o FlowshopBB.o
LINKING_FLAGS = -O3 -std=c++14
COMPILATION_FLAGS = -c -O3 -std=c++14

######################################################################################################################################
# COMPILATION
######################################################################################################################################
all: $(OBJS)
		g++ $(OBJS) -o $(BINARY_NAME) $(LINKING_FLAGS)

%.o: %.cpp
		g++ -c $< -o $@ $(COMPILATION_FLAGS)

######################################################################################################################################
clean:
		rm *.o bnb-fs
