OBJS = main.o
BINARY_NAME = bnb-fs
LINKING_FLAGS = -O3 -std=c++14
COMPILATION_FLAGS = -c -O3 -std=c++14

######################################################################################################################################
# COMPILATION
######################################################################################################################################
all: $(OBJS)
		g++ $(OBJS) -o $(BINARY_NAME)

%.o: %.cpp
		g++ -c $< -o $@ $(COMPILATION_FLAGS)

######################################################################################################################################
clean:
		rm *.o bnb-fs
